<div class="row">
  <div class="col s6 m6 center">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <span>Email: <%= @student.email %></span>
        <p>Course enrolments:</p>
        <% if @student.courses.any? %>
          <ul>
            <% @student.courses.each do |course| %>
              <li><%= course.short_name %></li>
            <% end %>
          </ul>
        <% else %>
          <span>None</span>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to "Edit this Profile", edit_student_path(@student) %>
      </div>
    </div>
  </div>
</div>

<%= render @student.courses %>
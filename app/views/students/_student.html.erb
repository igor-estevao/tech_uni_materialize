<div class="col s6 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title">Name: <%= student.name %></span>
      <span>Email: <%= student.email %></span>
      <p>Course enrolments  </p>
    </div>
    <div class="card-action">
      <%= link_to "View Profile", student_path(student) %>
      <%= link_to "Edit Profile", edit_student_path(student) if student == current_user %>
    </div>
  </div>
</div>
<turbo-frame id="flash">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <div class="toast-container" data-controller="toast" hidden data-key="<%= key %>">
        <span class="toast-content" data-toast-target="content"><%= value %></span>
      </div>
    </div>
  <% end %>
</turbo-frame>